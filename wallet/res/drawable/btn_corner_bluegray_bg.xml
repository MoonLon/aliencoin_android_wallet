<?xml version="1.0" encoding="utf-8"?>  
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">  
    <!-- Bottom 2dp Shadow -->  
    <item>  
        <shape  android:shape="rectangle">  
            <solid android:color="#ccc" />
            <corners android:radius="0dp" />
        </shape>  
    </item>  
      
    <!-- White Top color -->  
    <item android:bottom="1px" android:left="0px" android:right="1px" android:top="1px">
        <shape  android:shape="rectangle">  
             <solid android:color="#ddd" />
             <corners android:radius="0dp" />
             <padding
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                android:left="0dp"/>
        </shape>         
    </item>  
</layer-list>